{
  "manifest_version": 3,
  "name": "OpenFront Population Display",
  "version": "1.0",
  "description": "Displays population value from OpenFront.io games",
  "permissions": [],
  "content_scripts": [
    {
      "matches": [
        "https://openfront.io/*",
        "http://localhost:9000/*",
        "https://*.trycloudflare.com/*"
      ],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "img/characters/lofigirl.webp",
        "img/characters/phonk_radio.jpg",
        "img/characters/reggaeDub.png",
        "radio-config.json"
      ],
      "matches": [
        "https://openfront.io/*",
        "http://localhost:9000/*",
        "https://*.trycloudflare.com/*"
      ]
    }
  ]
}
